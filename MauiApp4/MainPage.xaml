        <!-- App description label with Green color -->
        <Label Text="BARÜ 7. Ar-Ge Proje Pazarı" FontSize="18" TextColor="DarkTurquoise" HorizontalOptions="Center"/>

        <!-- Contact label with Gray color -->
        <Label Text="İletişim: ismetarslan.uni@gmail.com" FontSize="16" TextColor="Blue" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>

